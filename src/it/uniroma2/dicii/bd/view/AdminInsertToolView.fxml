<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="800.0" prefWidth="1200.0" stylesheets="@../resources/stylesheets/style.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.uniroma2.dicii.bd.view.AdminInsertToolViewController">
    <top>
        <VBox prefWidth="100.0" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="backButton" contentDisplay="CENTER" mnemonicParsing="false" styleClass="back-button" text="&lt; Satellites/Tools List">
                    <VBox.margin>
                        <Insets top="5.0" />
                    </VBox.margin></Button>
            </children>
        </VBox>
    </top>
    <center>
        <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
            <children>
                <Label styleClass="label-big" text="Insert new Tool">
                    <VBox.margin>
                        <Insets />
                    </VBox.margin>
                </Label>
                <VBox>
                    <children>
                        <Label styleClass="label-sub" text="Name" VBox.vgrow="ALWAYS">
                            <VBox.margin>
                                <Insets top="20.0" />
                            </VBox.margin>
                        </Label>
                        <HBox prefHeight="27.0">
                            <children>
                                <TextField fx:id="insertedName" minHeight="-Infinity" minWidth="-Infinity" promptText="Name" HBox.hgrow="ALWAYS">
                                    <HBox.margin>
                                        <Insets top="5.0" />
                                    </HBox.margin>
                                </TextField>
                            </children>
                        </HBox>
                    </children>
                </VBox>
                <VBox>
                    <children>
                        <Label styleClass="label-sub" text="Band" VBox.vgrow="ALWAYS">
                            <VBox.margin>
                                <Insets top="20.0" />
                            </VBox.margin>
                        </Label>
                        <HBox>
                            <children>
                                <TextField fx:id="insertedBand" promptText="Surname" HBox.hgrow="ALWAYS">
                                    <HBox.margin>
                                        <Insets top="5.0" />
                                    </HBox.margin>
                                </TextField>
                            </children>
                        </HBox>
                    </children>
                </VBox>
            <VBox>
               <children>
                  <Label styleClass="label-sub" text="Satellite" VBox.vgrow="ALWAYS">
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin>
                  </Label>
                  <HBox>
                     <children>
                        <ComboBox fx:id="satelliteComboBox" prefWidth="1200.0" promptText="Select satellite" HBox.hgrow="ALWAYS">
                           <HBox.margin>
                              <Insets top="5.0" />
                           </HBox.margin>
                        </ComboBox>
                     </children>
                  </HBox>
               </children>
            </VBox>
                <Button fx:id="saveTool" mnemonicParsing="false" text="Save">
                    <VBox.margin>
                        <Insets top="20.0" />
                    </VBox.margin>
                </Button>
            </children>
            <padding>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
            </padding>
        </VBox>

    </center>
</BorderPane>
